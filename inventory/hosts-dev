# ============================================
# Kubernetes 集群 A
# ============================================

# Master 节点 (控制平面)
[k8s_masters]
dev-k8s-master-01 ansible_host=172.16.1.21
dev-k8s-master-02 ansible_host=172.16.1.22
dev-k8s-master-03 ansible_host=172.16.1.23

# Worker 节点 (工作负载)
[k8s_workers]
dev-k8s-worker-01 ansible_host=172.16.1.24
dev-k8s-worker-02 ansible_host=172.16.1.25
dev-k8s-worker-03 ansible_host=172.16.1.26
dev-k8s-worker-04 ansible_host=172.16.1.27

# etcd 集群 (默认与 master 共用)
[etcd:children]
k8s_masters

# K8s 集群 (包含所有节点)
[k8s_cluster:children]
k8s_masters
k8s_workers

# 为兼容旧配置保留的组名
[k8s_cluster_A:children]
k8s_cluster

